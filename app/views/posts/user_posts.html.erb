
<% @user.posts.each do |post| %>
    <div class="card mb-3">
        <img class="card-img-top" alt="Card image cap">
        <div class="card-body">
            <h5 class="card-title"><%= post.title %></h5>
            <p class="card-text"><small class="text-muted">Creado por <%= post.user.username %><%= post.updated_at.strftime(" el %d/%m/%Y a las %I:%M%p") %></small></p>
            <p class="card-text"><%= post.blog_entry.html_safe %></p>
            <a class="btn btn-primary"<%= link_to 'Show', post %></a>
            <a class="btn btn-info"<%= link_to 'Edit', edit_post_path(post) %></a>
            <a class="btn btn-danger"<%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></a>
        </div>
    </div>
<% end %>