<%= form_with(model: comment, local: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.text_field :author, placeholder: "Escrito por...", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.text_area :comment_entry, placeholder: "Cuéntame algo...", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.hidden_field :post_id, value: @post.id %> <!-- Para que el input se quede oculto y no aparezca en la página -->
  </div>

  <div class="form-group">
    <%= form.submit "Enviar", class: "btn btn-primary" %>
  </div>
<% end %>
